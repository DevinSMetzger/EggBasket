@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1 style="color: #E7DFDD">@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark" style="color: #E7DFDD">Click here to Logout</button>
            </form>
        }
        else
        {
            <p style="color: #E7DFDD">You have successfully logged out of the application.</p>
        }
    }
</header>