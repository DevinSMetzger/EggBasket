@using EggBasket.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<EggBasketUser> SignInManager
@inject UserManager<EggBasketUser> UserManager
<style>
    .logo-image {
        width: 46px;
        height: 46px;
        border-radius: 50%;
        overflow: hidden;
        margin-top: -6px;
    }
    .button2 {
        border: none;
        background-color:white;
        color: black;
        text-align: center;
        font-size: 15px;
        margin-top:18px;
        padding: 5px 20px;
        margin-right: 5px;
    }

    .footer {
        bottom: 0;
        color: black;
        height: 2em;
        left: 0;
        position: relative;
        font-size: small;
        width: 100%;
        border-top:solid 1px whitesmoke;
    }

    .Home:hover{
        color:deepskyblue;
    }

    .fontcolor{
        color:black;
    }


</style>

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - EggBasket</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="Shortcut Icon" type="image/x-icon" href="~/eggbasketwebbar_5wS_icon.ico" />

    </head>
<div class="fontcolor">
    <body style="background-color:white">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:white">
                <div class="container">
                    <img src="https://lh3.googleusercontent.com/5KphvW7Qdssv1rJtHuxsosaJ9nNIRu2Y8i4Z0A5sOf6zvX5Tf5AH8Ys5coAIIhNJpgLJOY6mDVDMLT7CNTFsKm4Vf2FyiBh0-_K5jIp614ixTQF9T0QWfgOOFoBIEpkEIXXnTa-NXQ=w2400" width="80" height="80" float:bottom />
                    <a class="navbar-brand" asp-area="" asp-page="/Index" style="color: deepskyblue">EggBasket</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <form action="/Index">
                                    <button class="button2 Home" type="submit">Home</button>
                                </form>
                            </li>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Credentials/Index">Credential Storage</a>
                                </li>
                            }
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <!--<footer class="border-top footer text-muted">-->
            <div class="footer">
                <p style="padding-left:5px" > 2021 - EggBasket - <a asp-area="" asp-page="/Privacy">Privacy</a></p>
                <p style="font-size:8px; padding-left:5px"> Icons made by <a href="https://www.flaticon.com/authors/prosymbols-premium" title="Prosymbols Premium" style="font-size:8px">Prosymbols Premium</a> from <a href="https://www.flaticon.com/" title="Flaticon" style="font-size:8px">www.flaticon.com</a></p>
            </div>
        
        
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
  </body>  
    </div>
</html>
