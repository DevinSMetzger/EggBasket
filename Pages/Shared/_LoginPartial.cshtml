@using Microsoft.AspNetCore.Identity
@using EggBasket.Areas.Identity.Data
@inject SignInManager<EggBasketUser> SignInManager
@inject UserManager<EggBasketUser> UserManager
    <style>
        .button {
            border: none;
            color: black;
            text-align: center;
            font-size: 15px;
            margin-top: 10px;
            padding: 5px 20px;
            margin-right: 5px;
        }
        .register:hover {
            background-color: deepskyblue;
            color:white;
        }
        .register {
            border: 2px solid deepskyblue;
            border-radius:10px;
            background-color: white;
        }
        .login {
            background-color: white;
            margin-right: 5px;
        }
            .login:hover {
                color: deepskyblue;
            }

    </style>


    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="nav-link btn btn-link"style="color: black">Logout</button>
                </form>
            </li>
        }
        else
        {
            <!-- Login NavBar-->
            <li class="nav-item">
                <form action="/Identity/Account/Login">
                    <button class="button login" type="submit">Login</button>
                </form>
            </li>
            <!--Register Navbar-->
            <li class="nav-item">
                <!-- <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a> -->
                <form action="/Identity/Account/Register">
                    <button class="button register" type="submit">Register</button>
                </form>
            </li>
        }
    </ul>
