@using Microsoft.AspNetCore.Identity
@using EggBasket.Areas.Identity.Data
@inject SignInManager<EggBasketUser> SignInManager
@inject UserManager<EggBasketUser> UserManager
    <style>
        .button {
            border: none;
            color: black;
            text-align: center;
            font-size: 15px;
            margin-top: 10px;
            padding: 5px 20px;
            margin-right: 5px;
        }
        .register:hover {
            background-color: deepskyblue;
            color:white;
        }
        .register {
            border: 2px solid deepskyblue;
            border-radius:10px;
            background-color: white;
        }
        .login {
            background-color: white;
            margin-right: 5px;
        }
            .login:hover {
                color: deepskyblue;
            }
        .logout:hover{
            color: deepskyblue;
        }

        

        .User:hover{
            color:deepskyblue;
        }
        

    </style>


    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <form action="Identity/Account/Manage/Index">
                <button type="submit" class="button2 User" title="Manage Account">Hello @UserManager.FindByEmailAsync(User.Identity.Name).Result.FirstName!</button>
                    </form>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="button2 logout">Logout <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-egg-fried" viewBox="0 0 16 16">
    <path d="M8 11a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
    <path d="M13.997 5.17a5 5 0 0 0-8.101-4.09A5 5 0 0 0 1.28 9.342a5 5 0 0 0 8.336 5.109 3.5 3.5 0 0 0 5.201-4.065 3.001 3.001 0 0 0-.822-5.216zm-1-.034a1 1 0 0 0 .668.977 2.001 2.001 0 0 1 .547 3.478 1 1 0 0 0-.341 1.113 2.5 2.5 0 0 1-3.715 2.905 1 1 0 0 0-1.262.152 4 4 0 0 1-6.67-4.087 1 1 0 0 0-.2-1 4 4 0 0 1 3.693-6.61 1 1 0 0 0 .8-.2 4 4 0 0 1 6.48 3.273z" />
</svg></button>
                </form>
            </li>
        }
        else
        {
            <!-- Login NavBar-->
            <li class="nav-item">
                <form action="/Identity/Account/Login">
                    <button class="button login" type="submit">Login <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-egg-fill" viewBox="0 0 16 16">
    <path d="M14 10a6 6 0 0 1-12 0C2 5.686 5 0 8 0s6 5.686 6 10z" />
</svg></button>
                </form>
            </li>
            <!--Register Navbar-->
            <li class="nav-item">
                <!-- <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a> -->
                <form action="/Identity/Account/Register">
                    <button class="button register" type="submit">Register<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-egg" viewBox="0 0 16 16">
    <path d="M8 15a5 5 0 0 1-5-5c0-1.956.69-4.286 1.742-6.12.524-.913 1.112-1.658 1.704-2.164C7.044 1.206 7.572 1 8 1c.428 0 .956.206 1.554.716.592.506 1.18 1.251 1.704 2.164C12.31 5.714 13 8.044 13 10a5 5 0 0 1-5 5zm0 1a6 6 0 0 0 6-6c0-4.314-3-10-6-10S2 5.686 2 10a6 6 0 0 0 6 6z" />
</svg></button>
                </form>
            </li>
        }
    </ul>
