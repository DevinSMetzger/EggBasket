@page
@model EggBasket.Pages.Credentials.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Credential</h1>

<hr />
<div style="width:100%">
    <form method="post">
        <div style="width: 30%; float: left; height: 400px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Credential.username" class="control-label"></label>
                <input asp-for="Credential.username" class="form-control" />
                <span asp-validation-for="Credential.username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credential.password" class="control-label"></label>
                <input asp-for="Credential.password" value=@ViewData["GeneratedPassword"] class="form-control" />
                <span asp-validation-for="Credential.password" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Generate Password" asp-page-handler="GenPass" />
            </div>
            <div class="form-group">
                <label asp-for="Credential.secureNote" class="control-label"></label>
                <input asp-for="Credential.secureNote" class="form-control" />
                <span asp-validation-for="Credential.secureNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credential.personal" class="control-label"></label>
                <input asp-for="Credential.personal" class="form-control" />
                <span asp-validation-for="Credential.personal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" asp-page-handler="CreateID" />
            </div>
            <div>
                <a asp-page="Index">Back to List</a>
            </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
