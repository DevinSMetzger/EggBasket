    ViewData["Title"] = "Home page";
}
<style>
    .backImage{
        position:relative;
        text-align:center;
        color:black;
    }

    .top-right{
        position:absolute;
        top:8px;
        right:16px;
    }

    p.spacing{
        line-height: 3.25;
    }
